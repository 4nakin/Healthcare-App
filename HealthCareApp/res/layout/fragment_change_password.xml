<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/change_password_save"
        android:layout_margin="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/change_password_old"
                style="@style/LoginEditTextStyle"
                android:hint="@string/current_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/change_password_new"
                style="@style/LoginEditTextStyle"
                android:hint="@string/new_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/change_password_re_new"
                style="@style/LoginEditTextStyle"
                android:hint="@string/new_re_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />
        </LinearLayout>
    </ScrollView>
    
    <Button
        android:id="@+id/change_password_save"
        style="@style/PositiveButtonStyle"
        android:layout_alignParentBottom="true"
        android:text="@string/save_changes" />
</RelativeLayout>