<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/login_container_width"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/holder"
        android:orientation="vertical" >

        <com.example.healthcareapp.widgets.LightEditText
            android:id="@+id/reset_username"
            style="@style/LoginEditTextStyle"
            android:hint="@string/username"
            android:imeOptions="actionNext"
            android:inputType="textPersonName" />

        <com.example.healthcareapp.widgets.LightEditText
            android:id="@+id/reset_email_address"
            style="@style/LoginEditTextStyle"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/reset_proceed_btn"
            style="@style/PositiveButtonStyle"
            android:text="@string/send_mail" />
    </LinearLayout>

    <include layout="@layout/layout_signup_footer" />

</LinearLayout>